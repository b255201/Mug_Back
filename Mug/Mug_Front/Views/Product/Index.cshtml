@model List<Mug_Front.Models.ArticleViewModel>
@{
    ViewBag.Title = "Index";
}


<section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Product</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Index","Home")">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>瓷器 <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4 ftco-animate">
                    <div class="blog-entry">
                        <a href="blog-single.html" class="block-20" style="background-image: url( @Url.Action("GetImageFile", "Home", new { fileName = @item.Image }));">

                        </a>
                        <div class="text bg-white p-4">
                            <h3 class="heading"><a href="#">@item.Title</a></h3>
                            @Html.Raw(item.Contents)
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</section>