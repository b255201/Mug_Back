}
<section class="hero-wrap hero-wrap-2"  data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">@Mug.Common.Resources.Layout.Contact</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Idenx","Home")">@Mug.Common.Resources.Layout.Home <i class="ion-ios-arrow-forward"></i></a></span> <span>@Mug.Common.Resources.Layout.Contact <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section ftco-no-pt ftco-no-pb ftco-counter img" id="section-counter" style="background-image: url(images/bg_3.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 py-5 pr-md-5">
                <div class="heading-section heading-section-white ftco-animate mb-5">
                    <h2 class="mb-4">@Mug.Common.Resources.Layout.Require</h2>
                </div>
                <form id="FrmId" class="appointment-form ftco-animate">
                    <div class="d-md-flex">
                        <div class="form-group">
                            <input type="text" id="Name" name="Name" class="form-control" placeholder="@Mug.Common.Resources.Layout.Contact_Name">
                        </div>
                        <div class="form-group ml-md-4">
                            <input type="text" class="form-control" id="Tel" name="Tel" placeholder="Tel">
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <div class="form-field">
                                <div class="select-wrap">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select name="Service" id="Service" class="form-control" style="background-color:black">
                                        <option style="background-color:cornflowerblue" value="訂單詢問">@Mug.Common.Resources.Layout.Contact_opt1</option>
                                        <option style="background-color:cornflowerblue" value="產品諮詢">@Mug.Common.Resources.Layout.Contact_opt2</option>
                                        <option style="background-color:cornflowerblue" value="如何出貨">@Mug.Common.Resources.Layout.Contact_opt3</option>
                                        <option style="background-color:cornflowerblue" value="其他服務">@Mug.Common.Resources.Layout.Contact_opt4</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group ml-md-12">
                            <input type="email" name="Email" id="Email" class="form-control" placeholder="@Mug.Common.Resources.Layout.Contact_Email">
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <textarea name="Memo" id="Memo" cols="30" rows="2" class="form-control" placeholder="@Mug.Common.Resources.Layout.Contact_Memo"></textarea>
                        </div>
                        <div class="form-group ml-md-4">
                            <input type="button" id="SendBtn" value="@Mug.Common.Resources.Layout.Contact_Btn" class="btn btn-secondary py-3 px-4">
                        </div>
                    </div>
                </form>

            </div>
            <div class="col-lg-6 p-5 bg-counter aside-stretch">
                <div class="row pt-4 mt-1">
                    <div class="col-md-6 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 p-5 bg-light">
                            <div class="text" style="text-align:left">
                                <span>@Mug.Common.Resources.Layout.Address:</span>
                                <span> @Mug.Common.Resources.Layout.Contact_Addr</span>
                            </div>
                        </div>
                    </div>
