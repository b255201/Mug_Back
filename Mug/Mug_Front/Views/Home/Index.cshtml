@model List<Mug_Front.Models.ArticleViewModel>
<section class="home-slider owl-carousel">
    @foreach (var item in Model)
    {
        if (item.Categore == "首頁大圖")
        {
            <div class="slider-item" style="background-image:url( @Url.Action("GetImageFile", "Home", new { fileName = @item.Image }));">

