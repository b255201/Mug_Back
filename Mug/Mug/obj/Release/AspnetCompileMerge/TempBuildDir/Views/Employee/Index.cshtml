@{
    ViewBag.Title = "員工查詢";
}
@section heads
{

    @Styles.Render("~/Content/css/datatables")
    <style>
        table.dataTable tbody td {
            vertical-align: middle;
        }
    </style>
}
<div class="page-header">
    <h1>
        員工查詢
    </h1>
</div>
<br />
<br />
<button type="button" class="btn btn-primary" onclick="javascript:location.href='@Url.Action("Insert", "Employee")'"><i class="fa fa-plus-square" aria-hidden="true">&nbsp;&nbsp;新增</i></button>
<!--顯示資料-->
<table id="main" class="display" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th style="width:10%" class="control-label ">姓名</th>
            <th style="width:10%" class="control-label ">帳號</th>
            <th style="width:10%" class="control-label ">刪除</th>
        </tr>
    </thead>
</table>


@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            onSearch();
        });

        function onSearch() {
            $("#main").DataTable({
                "responsive": true,
                "processing": true,
                "serverSide": false,
                "bAutoWidth": false,
                "bDestroy": true,
                "bInfo": true,
                "bFilter": false,
                "bSortable": true,
                "orderMulti": false,
                "bPaginate": true,
                "bLengthChange": false,
                "dom": "<'clear'>frtip",    //無工具列
                "displayStart": 0,
                "pageLength": 10,
                "order": [[0, "asc"]],
                "ajax": {
                    "type": "Post",
                    "url": '@Url.Action("Search","Employee")',
                    "error": function (msg) {
                        alert(msg);
                    }
                },
                "sServerMethod": "post",
                "columns": [
                    { "data": "Name" },
                    { "data": "Account" },
                    { "data": "Account" }

                ],
                "createdRow": function (row, data, index) {
                    var $lnkcode = $("<button class='btn btn-danger' ><i class='fa fa-trash'></i></button>");
                    $lnkcode.attr("onclick", "onDelete('" + data.Account + "' )");
                    $("td", row).eq(2).text("").append($lnkcode);
                },
                "language": {
                    "info": "目前第 _START_ - _END_ 筆 ／ 共計 _TOTAL_ 筆",
                    "infoEmpty": "0筆",
                    "zeroRecords": "查無符合條件資料",
                    "lengthMenu": "每頁顯示 _MENU_ 筆資料",
                    "infoFiltered": "(從 _MAX_ 筆資料中篩選)",
                    "paginate": {
                        "first": "第一頁",
                        "last": "最後一頁",
                        "next": "下一頁",
                        "previous": "上一頁"
                    }
                }
            })
        };

        function onDelete(Account)
        {
            var message = confirm("確定刪除嗎？");
            if (message == true)
            {
                 lockScreen();
                $.ajax({
                    "url": '@Url.Action("Delete","Employee")',
                    type: "POST",
                    data: {
                        "Account": Account,
                    },
                    success: function (data) {
                        unlockScreen();
                        if (data.Status == "0")
                        {
                            alert('' + data.StatusDesc);
                            var url ='@Url.Action("Index","Employee")';
                            window.open(url, "_self");
                        } else {
                            var message = data.StatusDesc;
                            alert(message);
                        }
                    },
                    error: function (err) {
                        unlockScreen();
                        alert(err.Status);
                    }
                });
            }
        }
    </script>
}
