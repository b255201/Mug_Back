@{
    ViewBag.Title = "產品頁";
}
@section heads
{

    @Styles.Render("~/Content/css/datatables")
    <style>
        table.dataTable tbody td {
            vertical-align: middle;
        }
    </style>
}
<div class="page-header">
    <h1>
        產品頁
    </h1>
</div>
<br /><br />


<div class="form-horizontal">
    <div class="form-group" style="margin-top:10px">
        <label class="col-sm-2 control-label">語言：</label>
        <div class="col-sm-3">
            @Html.DropDownList("Lang", (IEnumerable<SelectListItem>)ViewBag.SelectList, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-danger" onclick="onSearch();">查詢</button>
            <button type="button" class="btn btn-primary" onclick="javascript:location.href='@Url.Action("Insert", "Product")'"><i class="fa fa-plus-square" aria-hidden="true">&nbsp;&nbsp;新增</i></button>
        </div>
    </div>
</div>


<!--顯示資料-->
<table id="main" class="display" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th style="width:10%" class="control-label ">序號</th>
            <th style="width:10%" class="control-label ">標題</th>
            <th style="width:10%" class="control-label ">分類</th>
            <th style="width:10%" class="control-label ">圖片</th>
            <th style="width:10%" class="control-label ">是否啟動</th>
            <th style="width:10%" class="control-label ">編輯</th>
            <th style="width:10%" class="control-label ">刪除</th>
        </tr>
    </thead>
</table>


@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            onSearch();
        });

        function onSearch() {
            $("#main").DataTable({
                "responsive": true,
                "processing": true,
                "serverSide": false,
                "bAutoWidth": false,
                "bDestroy": true,
                "bInfo": true,
                "bFilter": false,
                "bSortable": true,
                "orderMulti": false,
                "bPaginate": true,
                "bLengthChange": false,
                "dom": "<'clear'>frtip",    //無工具列
                "displayStart": 0,
                "pageLength": 10,
                "order": [[0, "asc"]],
                "ajax": {
                    "type": "Post",
                    "url": '@Url.Action("Search","Product")',
                    "data": {
                        "Lang": $("#Lang").val()
                    },
                    "error": function (msg) {
                        alert(msg);
                    }
                },
                "sServerMethod": "post",
                "columns": [
                    { "data": "Blog_id" },
                    { "data": "Title" },
                    { "data": "Category_Opt" },
                    { "data": "Image" },
                    { "data": "Enable" },
                    { "data": "Blog_id" },
                    { "data": "Blog_id" }
                ],
                "createdRow": function (row, data, index) {
                    var $lnkcode = $("<img class='img - thumbnail thumb' style='width:50px; heigh:40px;' />");
                    $lnkcode.attr("src", "@Url.Action("GetImageFile", "Home")/?fileName=" +data.Image);
                    $("td", row).eq(3).text("").append($lnkcode);
                    var $lnkcode = $("<button class='btn btn-success' ><i class='fa fa-pencil-square-o'></i></button>");
                    //啟用
                    if (data.Enable == true)
                    {
                      $("td", row).eq(4).text("啟用").append($lnkcode);
                    } else
                    {
                      $("td", row).eq(4).text("未啟用").append($lnkcode);
                    }
                    $lnkcode.attr("onclick", "onEdit('" + data.Blog_id + "' )");
                    $("td", row).eq(5).text("").append($lnkcode);
                    var $lnkcode = $("<button class='btn btn-danger' ><i class='fa fa-trash'></i></button>");
                    $lnkcode.attr("onclick", "onDelete('" + data.Blog_id + "' )");
                    $("td", row).eq(6).text("").append($lnkcode);
                },
                "language": {
                    "info": "目前第 _START_ - _END_ 筆 ／ 共計 _TOTAL_ 筆",
                    "infoEmpty": "0筆",
                    "zeroRecords": "查無符合條件資料",
                    "lengthMenu": "每頁顯示 _MENU_ 筆資料",
                    "infoFiltered": "(從 _MAX_ 筆資料中篩選)",
                    "paginate": {
                        "first": "第一頁",
                        "last": "最後一頁",
                        "next": "下一頁",
                        "previous": "上一頁"
                    }
                }
            })
        };
        function onEdit(Id) { 
            var url = "@Url.Action("Edit","Product")/" + Id;
            window.location.href = url;
        }
        function onDelete(Id)
        {
            var message = confirm("確定刪除嗎？");
            if (message == true)
            {

                $.ajax({
                    "url": '@Url.Action("Delete","Product")',
                    type: "POST",
                    data: {
                        "Id": Id,
                    },
                    success: function (data) {
                        if (data.Status == "0")
                        {
                            alert('' + data.StatusDesc);
                            var url ='@Url.Action("Index","Product")';
                            window.open(url, "_self");
                        } else {
                            var message = data.StatusDesc;
                            alert(message);
                        }
                    },
                    error: function (err) {
                        alert(err.Status);
                    }
                });
            }
        }
    </script>
}
